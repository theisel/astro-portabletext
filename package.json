{
  "name": "root",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "launch-demo": "astro --root demo dev",
    "install:all": "pnpm recursive install",
    "format": "prettier -w **/*.{astro,js,jsx,mjs,svelte,ts,tsx}",
    "lint": "npx eslint .",
    "prepare": "husky install",
    "test:ci": "pnpm --filter astro-portabletext test:ci",
    "test": "pnpm --filter astro-portabletext test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/theisel/astro-portabletext.git"
  },
  "bugs": {
    "url": "https://github.com/theisel/astro-portabletext/issues"
  },
  "homepage": "https://github.com/theisel/astro-portabletext#readme",
  "devDependencies": {
    "@changesets/cli": "^2.26.1",
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "@types/node": "^20.1.3",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "astro": "2.4.5",
    "eslint": "^8.40.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8",
    "prettier-plugin-astro": "0.8.1",
    "prettier-plugin-svelte": "^2.10.0",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=16.12.0",
    "pnpm": ">=8.4.0"
  },
  "packageManager": "pnpm@8.4.0",
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/core"
      ]
    }
  }
}
